package com.sample.rules
 
import com.sample.DroolsTest.GUI;

declare Question
	question_content : String @key
	answer : String
end

// when	pytanie poprzedne zadane i ma konkretną odpowiedź to zapytaj nastepne lub udziel odp
	
global GUI gui
 
rule "1"
		when
		then
			String question = "Want your night to be action packed?";
            String[] possible_answers = {"Yes", "No"};
			gui.insertQuestionAndSetAnswer(question, possible_answers, false);
		    Question q = new Question(question, gui.answer);
			insert(q);
end
rule "2"
		when
			Question(question_content == "Want your night to be action packed?", answer == "Yes")
		then
			String question = "Have you seen a Terminator?";
			String[] possible_answers = {"Yes", "No"};
			gui.insertQuestionAndSetAnswer(question, possible_answers, false);
		    Question q = new Question(question, gui.answer);
			insert(q);
end

rule "3"
		when
			Question(question_content == "Want your night to be action packed?", answer == "No")
		then
			String question = "What about a documentary?";
			String[] possible_answers = {"Yes", "No"};
			gui.insertQuestionAndSetAnswer(question, possible_answers, false);
		    Question q = new Question(question, gui.answer);
			insert(q);
end

rule "4"
		when
			Question(question_content == "Have you seen a Terminator?", answer == "No")
		then
			String movie = "Terminator";
			gui.insertQuestionAndSetAnswer(movie, null, true);
end